{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@agentdb/client": ["./src/lib/agentdb-mock"]
    }
  },
  "include": ["src"],
  "exclude": ["src/App.tsx", "src/components/Dashboard.tsx", "src/hooks/useAgentDBLiveQuery.ts", "src/lib/agentdb-mock.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
